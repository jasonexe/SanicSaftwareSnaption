<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="32dp">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_corners" />

    <ImageView
        android:id="@+id/caption_photo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/caption_text"/>

    <TextView
        android:id="@+id/captioner_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/caption_text"
        android:layout_toEndOf="@+id/caption_photo"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/caption_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/photo"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/create_from_existing_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/captioner_text"
        android:text="Create game with this photo"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false"
        android:textSize="12sp" />
</RelativeLayout>