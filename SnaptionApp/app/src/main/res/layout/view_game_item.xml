<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="32dp">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_corners"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/create_from_existing_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_add_grey_600_18dp"
        app:backgroundTint="@android:color/white"
        app:elevation="2dp"
        app:fabSize="mini"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/game_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@+id/photo">
        <TextView
            android:id="@+id/picker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="Picker's username"/>
        <TextView
            android:id="@+id/upvote_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/upvote_icon"
            android:layout_marginEnd="4dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            tools:text="2"/>
        <ImageView
            android:id="@+id/upvote_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/thumb_up"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/caption_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_below="@+id/game_info"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/captioner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/caption_text"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center_vertical">
        <android.support.v7.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/captioner_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/captioner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="Captioner's username"/>
    </LinearLayout>
</RelativeLayout>