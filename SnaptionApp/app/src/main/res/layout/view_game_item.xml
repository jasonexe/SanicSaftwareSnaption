<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="32dp">

    <ImageView
        android:id="@+id/picker_photo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/picker_name"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/picker_photo"
        android:textSize="10sp"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_corners"
        android:layout_below="@+id/picker_photo" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/create_from_existing_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_add_grey_600_18dp"
        app:backgroundTint="@android:color/white"
        app:elevation="2dp"
        app:fabSize="mini"/>

    <ImageView
        android:id="@+id/caption_photo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/caption_text"/>

    <TextView
        android:id="@+id/captioner_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/caption_text"
        android:layout_toEndOf="@+id/caption_photo"
        android:textSize="12sp"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/caption_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/create_from_existing_button"
        android:textSize="16sp"/>
</RelativeLayout>