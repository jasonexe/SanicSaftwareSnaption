<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.snaptiongame.snaptionapp.ui.games.GameActivity">

    <ImageView
        android:layout_width="match_parent"
        android:maxHeight="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/image_view" />

    <RelativeLayout
        android:id="@+id/picker_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/picker_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/picker_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/picker_photo"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/flag_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/flag"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/picker_container"
        android:id="@+id/black_line1"
        android:background="@color/colorBlack"/>

    <RelativeLayout
        android:id="@+id/date_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/black_line1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/end_date"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:id="@+id/end_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/end_date"
            android:gravity="center_vertical"
            android:id="@+id/text_date"/>

        <ImageView
            android:src="@drawable/comments"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:id="@+id/captions_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:id="@+id/number_captions"
            android:layout_toStartOf="@id/captions_icon"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/date_container"
        android:id="@+id/black_line2"
        android:background="@color/colorBlack"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_add_white_24dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_caption_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/black_line2">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/caption_items"
        android:background="#80000000">

        <include layout="@layout/card_input_layout"
            android:id="@+id/card_input"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/possible_caption_cards_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>
