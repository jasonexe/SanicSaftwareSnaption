<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:orientation="vertical"
    android:paddingTop="@dimen/nav_padding_top"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:background="@drawable/snaption_background">
    <ImageView
        android:id="@+id/user_photo"
        android:layout_width="@dimen/user_nav_photo_size"
        android:layout_height="@dimen/user_nav_photo_size"
        android:contentDescription="@string/user_profile_photo"
        android:src="@android:drawable/btn_star_big_on"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="First Last"/>
    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="first.last@gmail.com"/>
</LinearLayout>