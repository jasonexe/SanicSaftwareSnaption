<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/input_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:gravity="center_horizontal">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_half_text"
            android:layout_weight="0"
            android:text="Test"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <EditText
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            android:layout_height="wrap_content"
            android:inputType="textAutoComplete"
            android:id="@+id/edit_caption_text"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_half_text"
            android:layout_weight="0"
            android:layout_marginEnd="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>
    <Button
        android:layout_below="@id/input_section"
        android:text="@string/submit_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/submit_caption_button"
        android:textSize="12sp"
        android:textAllCaps="false" />
</RelativeLayout>


