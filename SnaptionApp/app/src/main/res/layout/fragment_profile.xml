<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight=".8">

        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="40dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:paddingTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:id="@+id/profile_picture"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </ImageView>

        </android.support.v7.widget.CardView>

        <TextView
            android:text="username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name"
            android:textSize="24sp"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_toRightOf="@id/view2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/profile_games_created"
            android:layout_below="@+id/profile_name"
            android:layout_toRightOf="@+id/view2"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/games_created_text"
                android:textSize="16sp"
                android:text="@string/games_created"
                android:layout_toStartOf="@+id/games_created" />

            <TextView
                android:text="Game Count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/games_created"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:paddingStart="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/profile_games_created"
            android:layout_toRightOf="@+id/view2"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/captions_created_text"
                android:textSize="16sp"
                android:text="@string/captions_created"
                android:layout_toStartOf="@+id/captions_created"/>

            <TextView
                android:text="Caption Count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/captions_created"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:paddingStart="10dp"/>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Games Created"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/profile_games_list"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Captions Created"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/profile_captions_list"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>
</LinearLayout >
