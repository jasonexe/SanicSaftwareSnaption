<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="40dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:paddingTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:id="@+id/profile_picture"
                android:clickable="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </ImageView>

            <ImageView
                android:id="@+id/edit_photo_overlay"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_photo_camera_white_48dp"
                android:layout_gravity="center"/>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/friends_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp">

            <TextView
                android:id="@+id/friends_made_text"
                android:text="@string/friends_with_colon"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/friends_made"
                android:text="0"
                android:textSize="16sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/friends_made_text" />
        </RelativeLayout>

        <TextView
            android:text="username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name"
            android:textSize="24sp"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_toEndOf="@id/view2"/>

        <EditText
            android:text=""
            android:inputType="text"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:id="@+id/profile_name_editable"
            android:textSize="24sp"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_toEndOf="@id/view2"/>

        <ImageButton
            android:visibility="gone"
            android:id="@+id/stop_name_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_white_24dp"
            android:layout_alignEnd="@+id/profile_name_editable" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/profile_games_created"
            android:layout_below="@+id/profile_name"
            android:layout_toEndOf="@+id/view2"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/games_created_text"
                android:textSize="16sp"
                android:text="@string/games_created"
                android:layout_toStartOf="@+id/games_created" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/games_created"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:paddingStart="5dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/profile_games_created"
            android:layout_toRightOf="@+id/view2"
            android:padding="10dp">



            <TextView
                android:id="@+id/total_caption_upvotes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textSize="16sp"
                android:paddingStart="5dp"
                android:text="0"/>

            <TextView
                android:id="@+id/total_caption_upvote_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_toStartOf="@id/total_caption_upvotes"
                android:paddingStart="15dp"
                android:text="@string/total_caption_upvote_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/captions_created_text"
                android:textSize="16sp"
                android:text="@string/captions_created"
                android:layout_toStartOf="@+id/captions_created"/>

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/captions_created"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:layout_toStartOf="@id/total_caption_upvote_text"
                android:paddingStart="5dp"/>



        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Games Created"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/profile_games_list"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Captions Created"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/profile_captions_list"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>
</LinearLayout >
